# Crypto Monitor v8.3 - Environment Variables Template
# 复制此文件为 .env 并填入真实值
# cp env.example .env

# ==================== Redis ====================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==================== Telegram (Telethon) ====================
# 从 https://my.telegram.org 获取
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Telegram Bot Token (可选, 用于 Bot 模式)
TELEGRAM_BOT_TOKEN=your_bot_token

# ==================== Twitter API ====================
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# ==================== Exchange API Keys ====================
# Gate.io
GATE_KEY=your_gate_api_key
GATE_SECRET=your_gate_api_secret

# MEXC
MEXC_KEY=your_mexc_api_key
MEXC_SECRET=your_mexc_api_secret

# Bitget
BITGET_KEY=your_bitget_api_key
BITGET_SECRET=your_bitget_api_secret
BITGET_PASSPHRASE=your_bitget_passphrase

# KuCoin
KUCOIN_KEY=your_kucoin_api_key
KUCOIN_SECRET=your_kucoin_api_secret
KUCOIN_PASSPHRASE=your_kucoin_passphrase

# Bybit
BYBIT_KEY=your_bybit_api_key
BYBIT_SECRET=your_bybit_api_secret

# ==================== n8n Webhooks ====================
N8N_CEX_WEBHOOK_URL=https://your-n8n-instance/webhook/cex
N8N_ALERT_WEBHOOK_URL=https://your-n8n-instance/webhook/alert

# ==================== WeChat Push ====================
# 企业微信 Webhook (推荐)
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key
WECHAT_WEBHOOK_SIGNAL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_signal_key
WECHAT_WEBHOOK_TRADE=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_trade_key

# 企业微信 App (可选)
WECHAT_CORP_ID=your_corp_id
WECHAT_AGENT_ID=your_agent_id
WECHAT_SECRET=your_secret

# ==================== Logging ====================
LOG_LEVEL=INFO

# ==================== Dashboard ====================
DASHBOARD_SECRET_KEY=your_secret_key_for_flask
DASHBOARD_PORT=5000

# ==================== 链上交易 (DEX Sniper) ====================
# 钱包配置 (⚠️ 绝对不要提交到 Git)
WALLET_ADDRESS=0x_your_wallet_address
ETH_PRIVATE_KEY=your_private_key_without_0x

# RPC 节点
ETH_RPC_URL=https://eth.llamarpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
BASE_RPC_URL=https://mainnet.base.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# 区块链浏览器 API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# 1inch API (https://portal.1inch.dev)
ONEINCH_API_KEY=your_1inch_api_key

# GoPlus 安全检查 API (可选)
GOPLUS_API_KEY=your_goplus_api_key

# ==================== Listing Sniper 配置 ====================
# 最低触发评分
SNIPER_MIN_SCORE=60

# 是否自动交易 (true/false)
SNIPER_AUTO_TRADE=false

# 是否模拟运行 (true = 不实际交易)
SNIPER_DRY_RUN=true

# 是否等待手动输入合约地址
SNIPER_WAIT_MANUAL=true

# 最低流动性要求 (USD)
SNIPER_MIN_LIQUIDITY=10000

# 默认交易金额
SNIPER_AMOUNT_ETH=0.01
SNIPER_AMOUNT_BNB=0.05
SNIPER_AMOUNT_BASE=0.01
SNIPER_AMOUNT_ARB=0.01

# Telegram 通知 Chat ID
TELEGRAM_CHAT_ID=your_chat_id
